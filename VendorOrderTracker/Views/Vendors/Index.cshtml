@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models

<h1>Current Vendors:</h1>

@if (Model.Count == 0)
{
  <p>There are currently no vendors to display.</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li>
      <h2><a href="/vendors/@vendor.Id">@vendor.Name</a></h2>
    </li>

  }
</ul>

<button><a href="/vendor/new">Add a new vendor</a></button>
<button><a href='/'>Home Page</a></button>