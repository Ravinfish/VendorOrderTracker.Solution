@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models

<h1>Vendor Info:</h1>
<h3>Name: @Model.Name</h3>
<h3>@Model.Description</h3>

@if  (Model.Orders.Count == 0)
{
  <p>This vendor has no orders.</p>
}

<ul>
  @foreach (Order order in @Model.Orders)
  {
    <li><h2><a href="/vendors/@Model.Id/Orders/@order.Id">@order.Title</a></h2></li>
  }
</ul>

<button><a href="/vendors/@Model.Id/orders/new">Add a Order</a></button>
<button><a href="/vendors">Back to Vendors</a></button>
